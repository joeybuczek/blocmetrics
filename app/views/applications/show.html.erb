<%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>

<div class="row bgcolor-border margin-row">
  <div class="col-md-8">

    <h1><%= @application.name %></h1>
    <br/>
    
    <table class="table">
      <thead>
        <tr>
          <td><strong>Event Type</strong></td>
          <td><strong>Number of Events</strong></td>
        </tr>
      </thead>
      <tbody>
        <% @events.each do |e| %>
          <tr>
            <td><%= e[0] %></td>
            <td><%= e[1].count %></td>
          </tr>
        <% end %>     
      </tbody>
    </table>
    
    <table class="table">
      <thead>
        <tr>
          <td><strong>Event Charts</strong></td>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            <strong>Event Count by Name</strong>
            <br/>
            <%= pie_chart @application.events.group(:name).count %>
          </td>
        </tr>
        <tr>
          <td>
            <strong>Event Count by Day</strong>
            <br/>
            <%= line_chart @application.events.group_by_day(:created_at).count %>
          </td>
        </tr>
      </tbody>
    </table>
    
          
 
  </div>
</div>